{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [
                { "name": "UCX_LOG_LEVEL", "value": "trace" },
                { "name": "UCX_LOG_PRINT_ENABLE", "value": "y" },
                { "name": "UCX_LOG_FILE", "value": "/tmp/ucx_trace.log" },
                { "name": "UCX_TLS", "value": "gaudi,rc,self" },
                { "name": "UCX_NET_DEVICES", "value": "all" },
                { "name": "UCX_GAUDI_COPY_DMABUF", "value": "try" }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }

    ]
}